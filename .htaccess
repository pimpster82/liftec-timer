# LIFTEC Timer - Apache Configuration

# Add MIME type for .liftec files
AddType application/vnd.liftec.timer+json .liftec

# Enable CORS for file sharing
<IfModule mod_headers.c>
  Header set Access-Control-Allow-Origin "*"
  Header set Access-Control-Allow-Methods "GET, POST, OPTIONS"
  Header set Access-Control-Allow-Headers "Content-Type"
</IfModule>

# Force download for .liftec files (optional, can be removed if auto-open is preferred)
# <FilesMatch "\.liftec$">
#   Header set Content-Disposition "attachment"
# </FilesMatch>

# Cache static assets
<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType text/css "access plus 1 month"
  ExpiresByType application/javascript "access plus 1 month"
  ExpiresByType application/json "access plus 1 week"
  ExpiresByType application/vnd.liftec.timer+json "access plus 1 day"
</IfModule>

# Gzip compression
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html text/plain text/css application/json application/javascript
  AddOutputFilterByType DEFLATE application/vnd.liftec.timer+json
</IfModule>
